generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model AppUser {
  id          String   @id @default(cuid())
  clerkUserId String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Daily goals
  calorieGoal Int @default(2000)
  stepGoal    Int @default(10000)

  // Relations
  dailyMetrics     DailyMetric[]
  fitbitConnection FitbitConnection?
  meals            MealLog[]
  workoutSessions  WorkoutSession[]
  conversationEvents ConversationEvent[]
}

model DailyMetric {
  id        String   @id @default(cuid())
  userId    String
  date      String   // YYYY-MM-DD format, normalized to user timezone
  steps     Int?
  weightKg  Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model FitbitConnection {
  id             String   @id @default(cuid())
  userId         String   @unique
  fitbitUserId   String   @unique
  accessToken    String
  refreshToken   String
  scope          String
  expiresAt      DateTime
  lastSyncAt     DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MealLog {
  id            String   @id @default(cuid())
  userId        String
  eatenAt       DateTime
  mealType      String   // breakfast, lunch, dinner, snack
  description   String
  transcriptRaw String?  // Original transcript user approved
  calories      Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, eatenAt])
}

model WorkoutSession {
  id        String    @id @default(cuid())
  userId    String
  startedAt DateTime
  endedAt   DateTime?
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user AppUser      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sets WorkoutSet[]

  @@index([userId])
  @@index([userId, startedAt])
}

model WorkoutSet {
  id              String   @id @default(cuid())
  sessionId       String
  performedAt     DateTime
  exerciseName    String
  exerciseType    String   @default("resistance") // "resistance" or "cardio"
  reps            Int?     // For resistance training
  weightKg        Float?   // For resistance training
  durationMinutes Int?     // For cardio/freeform exercises
  notes           String?
  transcriptRaw   String?  // Original transcript user approved
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  session WorkoutSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([sessionId, performedAt])
}

model ConversationEvent {
  id            String   @id @default(cuid())
  userId        String
  kind          String
  userText      String
  systemText    String?
  source        String
  referenceType String?
  referenceId   String?
  metadata      Json?
  createdAt     DateTime @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([referenceType, referenceId])
}
