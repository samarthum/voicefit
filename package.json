{
  "name": "voicefit",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "dev:web": "bun run --cwd apps/web dev",
    "dev:mobile": "bun run --cwd apps/mobile start",
    "build": "bun run --cwd apps/web build",
    "build:web": "bun run --cwd apps/web build",
    "lint": "bun run --cwd apps/web lint",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "prisma": "^7.2.0",
    "typescript": "^5"
  },
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
